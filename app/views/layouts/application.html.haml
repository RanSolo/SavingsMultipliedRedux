%html{lang: "en"}
  %head
    %title= content_for(:html_title) || SavingsMultpliedRedux
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag "vendor/custom.modernizr"
    %meta{ charset: "utf-8"}/
    / Uncomment to make IE8 render like IE7
    / <meta http-equiv="X-UA-Compatible" content="IE=7" />
    / Set the viewport width to device width for mobile
    %meta{ content: "width=device-width, initial-scale=1.0", name: "viewport"}/
    = csrf_meta_tags
  %body
    %header
      .container
        %h1.logo= image_tag "savings-multiplied-logo.png"

      .container
        %ul#devise_navigation
          - if user_signed_in?
            %li
              You are signed in as
              = link_to(current_user.full_name, main_app.user_path(current_user))

            %li= link_to('sign out', destroy_user_session_path, method: :delete)
          - else
            %li#signIn= link_to("sign in", new_user_session_path)
            %li.divider
              |
            %li#signOut= link_to("sign up", new_user_registration_path)

      .container
        .space
        %ul#page_navigation
          %li#about.button.round= link_to "About", "/pages/about"
          %li#contact.button.round= link_to "Contact", "/pages/contact"
          %li#blog.button.round= link_to "Blog", "/pages/blog"
          %li#press.button.round= link_to "Press", "/pages/press"
          %h1#tagline= "Where parents of multiples exchange matching clothes"
        .clear
    %nav#main_navigation

      %ul
        %li= link_to "Buy", auctions_path
        %li= link_to "Sell", new_auction_path
        %li= link_to "How it Works", "/pages/howitworks"
        %li= link_to "Links", "/pages/links"
        %li= link_to "Community", "/pages/community"
        -# %li.search= render partial: "auction_searches/search_term_form"
    #bottom
      .container
        #content
          .notice= notice
          .alert= alert
          = yield
    %footer
      .container
        %ul
          %li= link_to "Link here", "#"
          %li.divider
            |
          %li= link_to "Link here", "#"
          %li.divider
            |
          %li= link_to "Link here", "#"
          %li.divider
            |
          %li= link_to "Link here", "#"
          %li.divider
            |
          %li= link_to "Link here", "#"
          %li.divider
            |
          %li= link_to "Link here", "#"
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
